{
    "problemMatcher": [
        {
            "owner": "cmake-problem-matcher",
            "pattern": [
                {
                    "regexp": "CMake (Warning|Error) at (.+):(\\d+)",
                    "severity": 1,
                    "file": 2,
                    "line": 3
                },
                {
                    "regexp": "^  (.+)\\.$",
                    "message": 1
                }
            ]
        }
    ]
}