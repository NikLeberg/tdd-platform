{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            // https://github.com/microsoft/vscode-cpptools/issues/6476
            "id": "platform",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "platform"
        }
    ],
    "options": {
        "cwd": "${workspaceFolder}/build/${input:platform}",
        "env": {
            "BASH_ENV": "${workspaceFolder}/platform/${input:platform}/environment.sh"
        }
    },
    "problemMatcher": "$gcc",
    "presentation": {
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "00 env",
            "detail": "Start a shell in a correctly sourced environment.",
            "type": "shell",
            "command": "bash",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "99 setup-buildfolder",
            "detail": "Setup build-subfolder for currently selected platform.",
            "type": "shell",
            "command": "mkdir -p build/${input:platform}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "close": true
            }
        },
        {
            "label": "01 generate",
            "detail": "Generate buildsystem with cmake.",
            "type": "shell",
            "command": "cmake ./../.. -DPLATFORM=${input:platform}",
            "dependsOn": "99 setup-buildfolder"
        },
        {
            "label": "99 clean",
            "detail": "Clean generated files from last build.",
            "type": "shell",
            "command": "make clean",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "02 build",
            "detail": "Build the project with gcc.",
            "type": "shell",
            "command": "make all"
        },
        {
            "label": "03 tests",
            "detail": "Run all tests.",
            "type": "shell",
            "command": "make tests"
        },
        {
            "label": "04 doc",
            "detail": "Generate HTML documentation for source code.",
            "type": "shell",
            "command": "make doc"
        },
        {
            "label": "05 flash",
            "detail": "Run application or flash application to chip and monitor it.",
            "type": "shell",
            "command": "make flash && make monitor",
        },
        {
            "label": "06 monitor",
            "detail": "Run application or monitor it on chip.",
            "type": "shell",
            "command": "make monitor",
        }
    ]
}