{
    "name": "tdd-platform",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--hostname",
        "tdd-platform",
    ],
    // Script to detect com/tty ports. Needs to run in the background so that it
    // can detect later added ports and does not delay the container startup.
    "initializeCommand": "dtach -n /tmp/tty .devcontainer/hostSetup.sh",
    "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "C_Cpp.clang_format_sortIncludes": false
    },
    "extensions": [
        "ms-vscode.cpptools",
        "twxs.cmake",
        "cschlosser.doxdocgen",
        "spmeesseman.vscode-taskexplorer"
    ]
}