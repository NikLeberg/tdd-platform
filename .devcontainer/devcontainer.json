{
    "name": "tdd-platform",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        "source=/tmp/tdd-platform-ccache,target=/root/.cache/ccache,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--hostname",
        "tdd-platform",
        "--add-host",
        "host.docker.internal:host-gateway"
    ],
    // Script to detect com/tty ports.
    "initializeCommand": ".devcontainer/hostSetup.sh",
    "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "C_Cpp.clang_format_sortIncludes": false
    },
    "extensions": [
        "ms-vscode.cpptools",
        "twxs.cmake",
        "cschlosser.doxdocgen",
        "spmeesseman.vscode-taskexplorer"
    ]
}