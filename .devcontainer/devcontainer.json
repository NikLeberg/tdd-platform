{
    "name": "tdd-platform",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--hostname",
        "tdd-platform",
    ],
    "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "C_Cpp.clang_format_sortIncludes": false
    },
    "extensions": [
        "ms-vscode.cpptools",
        "twxs.cmake",
        "cschlosser.doxdocgen",
        "spmeesseman.vscode-taskexplorer"
    ]
}