{
    "name": "tdd-platform",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--hostname",
        "tdd-platform",
    ],
    // Command to expose available tty/COM ports to the container. Somewhat platform
    // independant as .cmd is added if on Windows.
    // https://github.com/microsoft/vscode-remote-release/issues/4568
    "initializeCommand": ".devcontainer/hostSetup", // --device=/dev/$(readlink /dev/tty.usbmodem1421)
    "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "C_Cpp.clang_format_sortIncludes": false
    },
    "extensions": [
        "ms-vscode.cpptools",
        "twxs.cmake",
        "cschlosser.doxdocgen",
        "spmeesseman.vscode-taskexplorer"
    ]
}